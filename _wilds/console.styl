form
  top 0
  left 0
  position fixed
  x-oveflow hidden
  width 100%
  height 16px

input
  height 16px
  line-height 16px
  width inherit
  background transparent
  color black
  border 1px dotted black
  font-size 9px
  font-family 'monaco'
