form
  top 0
  left 0
  position fixed
  x-oveflow hidden
  width 400px
  height 16px
  padding 6px

input
  height 16px
  line-height 16px
  width inherit
  background transparent
  color #999
  border none
  border-left 1px solid #999
  border-top 1px solid #999
  font-size 15px
  font-family 'ProggySquareTT'

input:focus
  padding 2px
  padding-top 4px
  padding-left 4px
  color #f1f1f1
  background transparent
  outline none
  opacity 0.7
  border 1px solid #999
  border-bottom 1px solid #f1f1f1
