@import "fonts.css"

@keyframes out {
  from {
    opacity : 0.6;
  }
  to {
    opacity : 1;
  }
}

body
  font-size 12px
  font-family "Monaco"
  background white
  margin 0
  padding 0
  letter-spacing 1px

input 
  font-size 12px
  letter-spacing 1px
  background transparent
  margin 0
  padding 0
  padding-left 8px!important
  line-height 22px
  border-radius 0
  outline none
  border none

input:hover
  color black

input:focus
  color black
  line-height 22px
  outline none
  border none

.login
  position absolute
  top 50%
  left 50%
  margin-left -105px
  margin-top -70px
  width 210px
  cursor default
  z-index 999
  color #333
  background #f3f3f3
  border 1px solid #b9b9b9
  box-shadow 4px 4px 18px #ccc
  padding 0px 8px 8px
  border-radius 3px

.login input:focus
  color black

.login input 
  font-size 10!important
  color black!important
  background #f9f9f9
  border-top 1px solid #b9b9b9
  border-left 1px solid #b9b9b9
  border-bottom 1px solid white
  border-right 1px solid white
  border-radius 3px
  float left
  clear both
  width 200px

.login .error
  color red
  font-size 10px
  letter-spacing 1px
  float left
  clear both
  padding-top 20px

.omni
  color #333
  position fixed
  margin 0
  top 20px
  left 20px 
  cursor default
  z-index 999
  width 300px
  background #f3f3f3
  border 1px solid #b9b9b9
  box-shadow 4px 4px 18px #ccc
  padding 0px 8px 0px
  border-radius 3px

.omni #mode
  -moz-appearance none
  -webkit-appearance none
  border none
  background transparent
  box-shadow none
  font-family "AkkuratMono"
  text-indent 0.01px
  text-overflow ''

.omni input, .omni .hup
  background #f9f9f9
  border-left 1px solid #777
  border-top 1px solid #b9b9b9
  border-bottom 1px solid white
  border-right 1px solid white
  border-radius 3px
  margin-bottom 8px

.omni input
  width 290px!important

.omni h1, .login h1
  margin 0
  padding 0
  font-weight lighter
  font-size 7px
  color black
  letter-spacing 0px
  text-align center
  width inherit
  line-height 16px
  height 16px
  text-transform uppercase
  cursor move
  z-index 999

.login h1
  font-size 9px
  line-height 18px
  letter-spacing 4px

.omni ul
  list-style none
  margin 0
  padding 0

.omni ul li
  margin 0
  padding 0
  clear both
  float left
  color #888
  line-height 18px
  padding 0px 0px 4px

.omni .hup
  float left
  height 18px
  line-height 18px
  margin-right 10px
  font-size 10px
  padding 0px 4px 0px
  letter-spacing 2px
  text-transform uppercase

.omni .label
  float left
  line-height 18px
  letter-spacing 1px
  font-size 11px

.hilite
  position fixed
  z-index 1!important
  border 4px solid blue
  border-radius 2px
  opacity 0.6

.header
  width 100%
  height 72px
  margin-bottom 10px

.header .banner, .header .menu
  margin 0
  padding 0
  position relative
  width 825px
  margin-left -412.5px
  left 50%

.header .banner
  height 40px
  background-size cover
  background blue
  margin-bottom 4px

.header .menu
  clear both
  padding 0

.header .menu li
  list-style none
  float left
  width 157px
  margin-right 4px
  height 30px
  float left
  opacity 0.6
  background blue

.header .menu li:hover 
  opacity 1
  animation-name out
  animation-duration 900ms

.project
  position relative
  width 825px
  margin-left -412.5px
  left 50%
  z-index 2

.project .main div
  background-size cover!important
  margin-bottom 10px
  width 825px
  height 400px

.project .main
  float left
  clear both

.project .inc, .project .dec
  position absolute
  height 260px
  padding-top 140px
  top 0
  opacity 0
  font-size 80px
  color white
  text-decoration none
  text-shadow 1px 1px 20px #555

.project .dec
  left 0

.project .inc
  right 0

.project ul
  float left
  clear both
  margin 0
  padding 0

.project ul li
  list-style none
  padding 0 10px 0 0
  margin 0
  float left
  opacity 0.7

.project ul li.l5
  padding 0 0 0 0

.project ul li div
  height 120px
  width 157px
  background-size cover!important

.project .info
  position absolute
  font-family "GillSans"
  color #333
  left 835px
  font-size 15px
  line-height 18px
  bottom -400px
  width 140px
  min-height 20px

.dropzone
  z-index 888!important
  background blue
  position absolute
  opacity 0.3
  box-shadow 0px 0px 30px blue

.editBox
  position absolute
  z-index 999!important
  min-height 33px
  min-width 120px
  background #f1f1f1
  background #d4eeff
  background rgba(212, 238, 255, 0.9)
  border 1px solid black
  border-bottom 2px solid black
  border-right 2px solid black
  box-shadow 0px 0px 30px skyblue
  color black
  margin 0
  padding 6px

input[type="password"]::-webkit-input-placeholder
  color black!important
  opacity 0.4

.commands 
  display none
