body
  font-size 20px
  font-family "Akkurat Mono"
  background #fffff5
  margin 0
  padding 0
  letter-spacing 1px

.omni #mode
  -moz-appearance none
  -webkit-appearance none
  border none
  background transparent
  box-shadow none
  font-family "Akkurat Mono"
  text-indent 0.01px
  text-overflow ''

.overlay
  position fixed
  width 100%
  height 100%
  top 0
  left 0
  opacity 0.7
  background #f1f1f1

.notify
  width 100%
  height 20px
  position fixed
  z-index 999
  background red

.login
  background-color rgba(255,255,255,0.8)
  box-sizing border-box
  position absolute
  top 0
  left 0
  width 100%
  height 100%

.dropzone
  border-radius 999
  background blue
  position absolute
  top 0
  left 0
  width 120px
  height 120px
 
.omni, #loginForm
  line-height 20px
  color #333
  position absolute
  top 10px
  left 10px
  width 132px
  margin 0
  cursor default
  z-index 999

.omni a
  text-decoration none
  color black

.omni .menu 
  margin 0
  padding 0
  padding-top 3px
  margin-top 28px
  float left
  width 800px

.omni .menu li 
  z-index 999
  line-height 33px
  list-style none
  border 1px solid black
  border-bottom 2px solid black
  border-right 2px solid black
  float left
  padding 0
  padding-left 4px
  padding-right 4px
  margin 0!important    
  font-family "Akkurat Mono"
  font-size 18px
  list-style none

.omni .filter
  border-right none
  text-transform uppercase
  padding-top 2px!important
  line-height 31px!important
  font-size 12px!important

.omni .menu li:hover
  text-decoration underline

.omni #search
  width 500px
  line-height 28px
  border-left none
  padding-left 4px!important

.omni .omnibox
  letter-spacing 1px
  height 490px
  width 490px
  padding 4px
  color black
  border-left 1px solid black
  background transparent
  clear both

.omni .status
  position fixed
  top 4
  height 100%
  z-index -1
  width 100%

.omni .status ul li
  list-style none
  margin 0
  padding 0
  font-family "Akkurat Mono"
  font-size 16px
  line-height 22px
  color blue

.omni .status ul
  margin 0
  padding 0
  list-style none

input 
  font-size 18px
  font-family "Akkurat Mono"!important
  letter-spacing 1px
  background transparent
  margin 0
  padding 0
  line-height 22px
  border-radius 0
  outline none
  border none

input:hover
  color black

input:focus
  color black
  line-height 22px
  outline none
  border none

.login input:focus
  color #333

.login input 
  border-bottom 2px solid #333
  width 200px

.omni
  padding 0
  margin 0
  line-height 24px
  position absolute
  left 13px

ul.components
  display none

ul.components li
  list-style none
  width 40px
  height 40px
  line-height 40px
  text-align center
  float left

ul.components li:hover
  color red

.context 
  font-size 9px
  text-transform uppercase
  margin 0
  position absolute
  z-index 999
  cursor default

.context span.info
  clear both
  border-radius 3px
  border 1px solid black
  padding 0px 5px 0px 4px
  color black

.context ul
  padding 2px
  border 1px solid black
  border-radius 3px
  margin 4px 0 0 0

.context ul li
  list-style none
  padding 0px 4px 0px 4px
  color black
  text-transform uppercase
  line-height 14px

.context ul li:hover
  border 1px solid black
