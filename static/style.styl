// colors
dark = rgba(255, 255, 255, 0.95)
// med = #CBD5DF 
light = #EBEEFB
// med = #FBF4EB
med = #FFFFF5
shade = 0 0 11px rgba(0, 0, 0, 0.25)
shade1 = 0 0 11px rgba(57, 66, 122, 0.55)
uiFont = 'bmono'

@import "fonts/stylesheet.css"

@media (min-width: 640px)
  body 

@media (min-width: 1024px)
  body

*, *:before, *:after
  -moz-box-sizing border-box
  -webkit-box-sizing border-box
  box-sizing border-box

svg 
  shape-rendering: crispEdges;

svg text::selection
  background #f1f1f1!important
  fill black!important

a
  color #080A17
  text-decoration none

body
  background black
  font-size 12px
  font-family uiFont
  margin 0
  padding 0

input, input:focus
  -webkit-font-smoothing subpixel-antialiased
  outline none
  padding 0
  background transparent!important
  color #080A17!important
  font-family uiFont

.omni
  // box-shadow shade
  // background dark
  width 280px
  position fixed
  right 0px
  top 0px
  margin 0
  padding 0
  list-style none
  z-index 999
  font-size 10px
  cursor -webkit-grab
  cursor grab
  font-family uiFont

.omni 
  text-align center
  overflow hidden
  // border-left 1px solid rgba(0,0,0,0.3)
  // border-bottom 1px solid rgba(0,0,0,0.3)

.omni .search
  display none
  position absolute
  bottom 0
  right 10px
  font-family uiFont
  border-radius 3px
  border none
  outline none
  font-size 12px

.omni .tray 
  cursor default!important
  color black
  list-style none
  margin 0 
  padding 0
  width 100%
  text-align center

.omni a
  color black
  float left
  line-height 12px

.omni .blackbox
  display none
  cursor default
  float left
  clear both
  background rgba(235, 238, 251, 0.35)

.omni .exit
  float right!important
  font-size 18px
  line-height 16px
  margin-right 1px

.omni .file
  font-size 20px
  width 16px
  height 18px
  line-height 14px
  text-align center

.omni .lib
  display none
  cursor default
  list-style none
  position absolute
  margin 0
  padding 0
  top 45px
  left 10px
  width 192px

.omni .lib li
  margin 2px 0 0 2px
  color black
  background light
  padding 0px 3px 2px 3px
  list-style none
  line-height 12px
  font-size 10px
  float left
  clear both

.omni .lib li b
  color black
  padding 0 8px 0 0
  font-weight lighter
  font-size 14px

.omni .settings
  display none
  position absolute
  bottom 8px
  width 100%
  padding 4px 8px 2px 8px

.omni .settings b
  float left
  font-weight normal
  font-size 12px
  color white

.omni .settings ul
  margin 0
  padding 0

.omni .settings ul li
  list-style none
  width 100%
  float left 
  clear both

.omni .settings input
  font-size 12px!important
  color white!important
  font-family uiFont!important
  float right
  text-align right
  outline none
  margin 0 0 0 8px
  max-width 160px
  line-height 18px
  border none
  border-bottom 1px dotted!important

.login 
  z-index 9999
  position absolute
  background #E5E5DC
  top 0!important
  right 0
  padding 1px 12px 4px

.login input
  float left
  width 256px
  font-size 13px
  padding 0
  border none
  border-bottom 2px solid blue!important
  color blue!important
  outline none
  margin 0

.login span
  color blue
  float left

.error 
  color black
  background rgba(255, 243, 10, 0.65)
  line-height 18px
  padding 0 4px 0 4px
  margin 4px 0 0 0
  box-shadow 1px 2px 6px rgba(0, 0, 0, 0.3)
  border-radius 5px
  font-size 14px
  position absolute
  z-index 999

.header
  float left 
  clear both
  background-repeat no-repeat
  background-position center 12px
  height 138px!important
  width 100%
  border-bottom 2px solid #72A9B8

.header ul
  position relative
  float left
  clear both
  padding 0
  margin 0
  margin-left -383px
  margin-top 88px
  left 50%
  width 800px
  list-style none

.header ul li
  padding 0
  margin 0
  margin-right 28px
  height 30px
  float left

.header ul li a img:hover 
  filter grayscale(90%)
  -webkit-filter grayscale(90%)

.header ul li a img
  min-width 40px
  min-height 18px

.project
  float left
  clear both

.project .full
  float left

.project .desc
  float left

.project ul
  float left
  clear both
  list-style none
  margin 10px 0 0 0
  padding 0

.project ul.thumbs li
  margin-right 10px
  float left

.project ul.slides li
  float left
  position absolute 
  top 50px
  left 0
  background white

.project ul.slides li img
  float left
  min-width 300px
  min-height 300px
  max-height 600px

.project ul.slides li span
  float left

.project ul.thumbs li a
  min-width 100px
  min-height 100px
  background-position center
  background-size cover
  float left

.project .main
  min-width 400px
  min-height 300px
  background-position center
  background-size cover
  float left

.category
  float left 
  clear both
  width 100%

.category .inner
  position relative
  width 800px
  margin-left -400px
  left 50%
 
.edit .project ul.thumbs li a 
  background-color med

.edit .category .filter
  position absolute
  width 100%
  height 150px
  display block!important
  background rgba(0, 0, 255, 0.08)

.category ul
  list-style none
  margin 0
  padding 0

.category ul li
  padding 0
  margin 0 
  margin-right 8px
  float left

.category ul li a
  float left
  background-position center
  background-size cover
  width 150px
  height 150px

.category h1
  font-size 14px
  text-transform uppercase
  margin 0
  color #555

.article 
  position relative
  width 800px
  left 50%
  margin 30px -400px 0
  float left
  clear both

.article .txt
  color #777
  font-size 13px
  line-height 18px
  width 360px
  float left

.article img
  float right

#cvs 
  cursor default
  float left
  clear both
  width 100%
  height 550px
  background transparent!important
  // background rgb(235, 238, 251)

.grifter
  // background rgba(45, 54, 114, 0.94) 
  font-size 14px
  position absolute
  z-index 999!important
  margin 0
  padding 8px

.grifter .tray 
  position absolute
  top -7px
  cursor default!important
  top -7px
  width 100%
  font-size 10px
  color rgba(255, 255, 255, 0.83)

.grifter .tags
  float left
  width 94px
  font-size 10px
  box-shadow shade
  border-radius 9px
  background med!important
  margin 0 2px 0 0
  padding 0 6px
  border none

.grifter a
  color rgba(110, 231, 197, 0.88)
  float left
  padding 0 4px
  margin-right 2px
  border-radius 999px
  box-shadow shade1
  font-size 10px

.grifter a.reset
  background #FEF169
  color black

.grifter a.del
  background #FE5C8A
  color black

.grifter ul 
  cursor default
  float left
  clear both
  margin 0
  padding 0

.grifter ul li
  float left
  clear both
  background dark
  box-shadow shade1
  padding 1px 1px 0 6px
  border-radius 9px
  list-style none
  margin 1px 0

.grifter ul li span
  color black
  font-size 12px
  line-height 14px
  text-transform uppercase
  font-size 10px
  float right

.grifter ul li textarea
  color black!important
  background light!important
  padding 0 6px 0 6px
  outline none
  border none
  height 13px
  line-height 12px
  border-radius 9px
  margin-left 10px
  font-size 10px
  float right

.pumicle
  float left

.container
  width 100%

.edit .container 
  width 75%

body img 
  border none
  background none

.edit img
  border none
  background -webkit-gradient(
    linear,
    left top,
    left bottom,
    color-stop(0, #D69FB0),
    color-stop(1, #CDD4DE)
  )
  background -o-linear-gradient(bottom, #D69FB0 0%, #CDD4DE 100%)
  background -moz-linear-gradient(bottom, #D69FB0 0%, #CDD4DE 100%)
  background -webkit-linear-gradient(bottom, #D69FB0 0%, #CDD4DE 100%)
  background -ms-linear-gradient(bottom, #D69FB0 0%, #CDD4DE 100%)
  background linear-gradient(to bottom, #D69FB0 0%, #CDD4DE 100%)

.status
  background light
  box-shadow shade
  color black
  width 100%
  height 20px
  font-size 14px
  line-height 18px
  padding 0 8px
  position fixed
  z-index 9999
  top 0
  left 0
