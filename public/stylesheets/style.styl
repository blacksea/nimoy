body
  padding 50px
  background #00001E
  overflow hidden
  position fixed
  font-size 8px
  letter-spacing 1px
  font-family 'monaco'
  color #fff
  // text-transform uppercase

a
  color #00B7FF

 #number
	font-family 'monaco'
	font-size  9px
	cursor none
	width 50px
	height 12px
	border 1px solid #ccc
	// background blue
	color white
	float left
	text-align center

#topbar
	border none
	border-bottom 1px solid #ccc
	color #ccc
	font-size 9px
	text-transform uppercase
	font-weight bold
	font-family 'monaco'
	text-align center
	width 100%
	background black
	height 12px
	top 0
	left 0
	position fixed

#topbar:focus
	border none!important
	outline none!important
	background blue
	color black
	// border-bottom 1px solid #ccc

input.text::selection, ::selection
	background-color red!important
	color blue!important

.row
	border-bottom 1px solid #ccc
	height 12px
	padding 6px

#grip 
	-webkit-user-drag: element
	height 8px
	background #ccc
	cursor crosshair

#grip:-webkit-drag
	border none 
	width 1px
	height 1px
	background-color #00001E

label
	font-size 9px
	text-transform uppercase
	line-height 15px
	padding-right 4px
	letter-spacing 0px
	float left
	color #ccc

#panel
	border-radius 2px
	position fixed
	cursor default
	// padding 20px
	border 1px solid #ccc
	width 300px
	height 200px
	left 200
	top 200
	// margin-top -100px
	// margin-left -150px