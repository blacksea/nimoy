@import 'modules'

body
  // padding 50px
  width 100%
  height 100%
  margin 0
  padding 0
  background #00001E
  overflow hidden
  position fixed
  font-size 8px
  letter-spacing 1px
  font-family 'monaco'
  color #fff
  // text-transform uppercase

a
  color #00B7FF

 #number
	font-family 'monaco'
	font-size  9px
	cursor none
	width 50px
	height 12px
	border 1px solid #ccc
	// background blue
	color white
	float left
	text-align center

.row
	border-bottom 1px solid #ccc
	height 12px
	padding 6px

#grip 
	-webkit-user-drag: element
	height 8px
	background #ccc
	cursor crosshair

#grip:-webkit-drag
	border none 
	width 1px
	height 1px
	background-color #00001E

label
	font-size 9px
	text-transform uppercase
	line-height 15px
	padding-right 4px
	letter-spacing 0px
	float left
	color #ccc

#panel
	border-radius 2px
	position fixed
	cursor default
	border 1px solid #ccc
	width 300px
	height 200px
	left 200
	top 200

#skeleton
	opacity 0.6
	// background black
	margin 0
	padding 8px
	border-radius 2px
	position absolute
	border 1px solid #666
	top 18px
	right 18px
	z-index 1

#skeleton li
	list-style none

#skeleton #console
	// border 1px solid #ccc
	color #666
	font-size 9px
	// background black
	padding 6px
	width 200px
	text-align center
	// height 100px

#prompt
	color #ccc
	font-size 9px
	font-family 'monaco'
	text-align center
	background transparent
	line-height 13px
	width 212px
	height 13px
	top 0
	left 0
	position relative
	border 1px solid #666

#prompt:focus
	// border none!important
	outline none!important
	border 1px solid blue
	color white

input.text::selection, ::selection
	background-color red!important
	color blue!important